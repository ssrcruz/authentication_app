<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
          <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.students.any? %>
      <h3>Students (<%= @user.students.count %>) </h3>
      <ol class="students">
        <%= render @students %>
      </ol>
    <% end %>
  </div>
</div>
